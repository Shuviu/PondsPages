<controls:UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:PondsPages.ViewModel;assembly=PondsPages.ViewModel"
             xmlns:views="clr-namespace:PondsPages.Desktop.Views"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PondsPages.Desktop.Views.MainView"
             x:DataType="viewModel:MainViewModel">
  <Design.DataContext><viewModel:MainViewModel /></Design.DataContext>
    <StackPanel>
        <ContentControl Content="{Binding NavBarView}"></ContentControl>
        <ContentControl Content="{Binding CurrView}"></ContentControl>
    </StackPanel>
    
</controls:UserControl>
